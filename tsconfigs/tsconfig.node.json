{
  "extends": ["./tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "bundler",
    "types": ["node"],
    "customConditions": ["node"]
  },
  "include": [
    "../vitest.config.ts",
    "../vitest.workspace.ts",
    "../website/vite.config.ts",
    "../apis/src/**/*",
    "../apis/tests/**/*",
    "../packages/utils/src/**/*.node.ts",
    "../packages/utils/tests/**/*.node.spec.ts"
  ],
  "exclude": [
    "../**/node_modules"
  ]
}
